extends base

block content
    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Create new account
            form.form.form--signup
                - if(data=='User')
                    .form__group
                        label.form__label(for='name') Full Name
                        input#name.form__input(type='text', placeholder='First Second', required)
                    .form__group
                        label.form__label(for='email') Email address
                        input#email.form__input(type='email', placeholder='you@example.com', required)
                    .form__group.ma-bt-md
                        label.form__label(for='number') Phone
                        input#phone.form__input(type='number', placeholder='9999999999', required, minlength='10')
                    .form__group
                        label.form__label(for='role') Role
                        input#role.form__input(type='string', placeholder='••••••••', required, minlength='2')
                    .form__group.ma-bt-md 
                        label.form__label(for='password') Password
                        input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    .form__group.ma-bt-md 
                        label.form__label(for='confirmPassword') Confirm Password
                        input#confirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    .form__group.butn
                        button.btn.btn--green SignUp
                - else if(data=='Rest')
                    .form__group
                        label.form__label(for='name') Restaurant's Name
                        input#name.form__input(type='text', placeholder='eg: Taj Restaurant', required)
                    .form__group
                        label.form__label(for='email') Restaurant's address
                        input#email.form__input(type='email', placeholder='eg: restaurant@example.com', required)
                    .form__group.ma-bt-md
                        label.form__label(for='number') Phone
                        input#phone.form__input(type='number', placeholder='eg: 8989898989', required, minlength='10')
                    .form__group
                        label.form__label(for='role') Role
                        input#role.form__input(type='string', placeholder='eg: user', required, minlength='2')
                    .form__group
                        label.form__label(for='greeting') Greeting
                        input#greeting.form__input(type='string', placeholder='eg: Hello there!!', required, minlength='2')
                    .form__group
                        label.form__label(for='message') Message
                        input#message.form__input(type='string', placeholder='eg: To serve the best food', required, minlength='2')
                    .form__group
                        label.form__label(for='title') Title
                        input#title.form__input(type='string', placeholder='eg: Best in town', required, minlength='2')
                    .form__group
                        label.form__label(for='city') City
                        input#city.form__input(type='string', placeholder='eg: Lucknow', required, minlength='2')
                    .form__group
                        label.form__label(for='country') Country
                        input#country.form__input(type='string', placeholder='eg: India', required, minlength='2')
                    .form__group.ma-bt-md 
                        label.form__label(for='password') Password
                        input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    .form__group.ma-bt-md 
                        label.form__label(for='confirmPassword') Confirm Password
                        input#confirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    .template_choice
                        h6.heading-secondary.ma-bt-lg(for='choice') Choose Your Template
                        .choices
                            label.form__label(for='choice1' style="padding-left: 0;") Template 1
                            input#choice1(type='checkbox', value='Template 1') 
                            a(href='http://127.0.0.1:5501/views/test-template/template1/index.html', target='_blank' ,style='font-size: 10px;text-decoration: none;padding-left: 2px;font-weight: 600;font-size: 10px;text-decoration: none;padding-left: 2px;font-weight: 600;color: #259300;')="    Test it"
                            label.form__label(for='choice2') Template 2
                            input#choice2(type='checkbox', value='Template 2')
                            a(href='http://127.0.0.1:5501/views/test-template/template2/third.html', target='_blank' ,style='font-size: 10px;text-decoration: none;padding-left: 2px;font-weight: 600;font-size: 10px;text-decoration: none;padding-left: 2px;font-weight: 600;color: #259300;')="    Test it"
                    .form__group.butn
                        button.btn.btn--green SignUp