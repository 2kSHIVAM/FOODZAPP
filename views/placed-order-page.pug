extends base
block content 
        link(rel='stylesheet', href='/css/stylus.css')
        .page-content.container
            .page-header.text-blue-d2
                h1.page-title.text-secondary-d1
                    | Invoice
                    small.page-info
                        i.fa.fa-angle-double-right.text-80
                            ID: #111-222
                .page-tools
                    .action-buttons
                        a.btn.bg-white.btn-light.mx-1px.text-95(href='#', data-title='Print')
                            i.mr-1.fa.fa-print.text-primary-m1.text-120.w-2
                                Print
                        a.btn.bg-white.btn-light.mx-1px.text-95(href='#', data-title='PDF')
                            i.mr-1.fa.fa-file-pdf-o.text-danger-m1.text-120.w-2
                                Export
            .container.px-0
                .row.mt-4
                    .col-12.col-lg-12
                        .row
                            .col-12
                                .text-center.text-150
                                    i.fa.fa-book.fa-2x.text-success-m2.mr-1
                                    span.text-default-d3    FOODZAPP.COM
                        // .row
                        hr.row.brc-default-l1.mx-n1.mb-4
                        .row
                            .col-sm-6
                                div
                                    span.text-sm.text-grey-m2.align-middle To:
                                    span.text-600.text-110.text-blue.align-middle Alex Doe
                                .text-grey-m2
                                    .my-1
                                        | Street, City
                                    .my-1
                                        | State, Country
                                    .my-1
                                        i.fa.fa-phone.fa-flip-horizontal.text-secondary
                                        |  
                                        b.text-600 111-111-111
                            // /.col
                            .text-95.col-sm-6.align-self-start.d-sm-flex.justify-content-end
                                hr.d-sm-none
                                .text-grey-m2
                                    .mt-1.mb-2.text-secondary-m1.text-600.text-125
                                        | Invoice
                                    .my-2
                                        i.fa.fa-circle.text-blue-m2.text-xs.mr-1
                                        |  
                                        span.text-600.text-90 ID:
                                        |  #111-222
                                    .my-2
                                        i.fa.fa-circle.text-blue-m2.text-xs.mr-1
                                        |  
                                        span.text-600.text-90 Issue Date:
                                        |  Oct 12, 2019
                                    .my-2
                                        i.fa.fa-circle.text-blue-m2.text-xs.mr-1
                                        |  
                                        span.text-600.text-90 Status:
                                        |  
                                        span.badge.badge-warning.badge-pill.px-25 Paid
                            // /.col
                        .mt-4
                            .row.text-600.text-white.bgc-default-tp1.py-25
                                .d-none.d-sm-block.col-1 #
                                .col-9.col-sm-5 Description
                                .d-none.d-sm-block.col-4.col-sm-2 Qty
                                .d-none.d-sm-block.col-sm-2 Unit Price
                                .col-2 Amount
                            .text-95.text-secondary-d3
                                each item in data
                                    .row.mb-2.mb-sm-0.py-25
                                        .d-none.d-sm-block.col-1 1
                                        .col-9.col-sm-5= `${item.name}`
                                        .d-none.d-sm-block.col-2= `${item.quantity}`
                                        .d-none.d-sm-block.col-2.text-95= `₹${item.price}*${item.quantity}`
                                        .col-2.text-secondary-d2= `₹${item.price * item.quantity}`
                            .row.border-b-2.brc-default-l2
                            // or use a table instead
                            //
                                <div class="table-responsive">
                                <table class="table table-striped table-borderless border-0 border-b-2 brc-default-l1">
                                <thead class="bg-none bgc-default-tp1">
                                <tr class="text-white">
                                <th class="opacity-2">#</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>Unit Price</th>
                                <th width="140">Amount</th>
                                </tr>
                                </thead>
                                <tbody class="text-95 text-secondary-d3">
                                <tr></tr>
                                <tr>
                                <td>1</td>
                                <td>Domain registration</td>
                                <td>2</td>
                                <td class="text-95">$10</td>
                                <td class="text-secondary-d2">$20</td>
                                </tr>
                                </tbody>
                                </table>
                                </div>
                            .row.mt-3
                                .col-12.col-sm-7.text-grey-d2.text-95.mt-2.mt-lg-0
                                    | Extra note such as company or payment information...
                                .col-12.col-sm-5.text-grey.text-90.order-first.order-sm-last
                                    .row.my-2
                                        .col-7.text-right
                                            | SubTotal
                                        .col-5
                                            span.text-120.text-secondary-d1= `₹${totalPrice}`
                                    .row.my-2
                                        .col-7.text-right
                                            | Tax (..%)
                                        .col-5
                                            span.text-110.text-secondary-d1 ₹30
                                    .row.my-2.align-items-center.bgc-primary-l3.p-2
                                        .col-7.text-right
                                            | Total Amount
                                        .col-5
                                            span.text-150.text-success-d3.opacity-2= `₹${totalPrice + 30.00}`
                            hr
                            div
                                span.text-secondary-d1.text-105 Thank you for your business
