extends base

mixin navItem(link,text,icon,active)
    li(class=`${active?'side-nav--active':''}`)
        a(href=link)
            svg
                use(xlink:href=`img/icons.svg#icon-${icon}`)
            | #{text}
block content
    link(rel='stylesheet', href='/css/stylish.css')
    link(rel='stylesheet', href='/css/style1.css')
    link(rel="stylesheet", href="/css/menuManage.css")

    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    +navItem('/me-rest','Settings','settings')
                    +navItem('/my-orders-rest','My bookings','briefcase')
                    +navItem('signup2-menu','Make Your Menu','star')
                    +navItem('/manageMenu','Update Your Menu','star',true)
                    +navItem('/getQr','Get you QR code','credit-card')

            .user-view__content
                h2.heading-secondary.ma-bt-md(style="margin-top: 0;") Manage Your Menu 
                .cards-container
                    each item in data
                        each meal in item.meals
                            figure.card
                                .card__emoji(style="display: flex;justify-content: center;")
                                    img(src=`${meal.meal_photo}`)
                                .card__options
                                    .card__title-box
                                        h2.card__title=`${meal.meal_name}`
                                    .card__details
                                        .card__detail-box
                                            h6.card__detail.meal-price= `â‚¹${meal.price}`
                                        .card__button
                                            button.btn.btn--green#deleteMeal(data-food-id=`${meal._id},${item._id},${restId}`) Delete
