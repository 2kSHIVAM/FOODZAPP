extends base

mixin navItem(link,text,icon,active)
    li(class=`${active?'side-nav--active':''}`)
        a(href=link)
            svg
                use(xlink:href=`img/icons.svg#icon-${icon}`)
            | #{text}
block content
    link(rel='stylesheet', href='/css/stylish.css')
    //- link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/style1.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
    link(rel="stylesheet", href="/css/menuManage.css")

    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    +navItem('/me-rest','Settings','settings')
                    +navItem('/my-orders-rest','My bookings','briefcase')
                    +navItem('signup2-menu','Make Your Menu','star')
                    +navItem('/manageMenu','Update Your Menu','star',true)
                    +navItem('/getQr','Get you QR code','credit-card')

            .user-view__content
                .container
                    h1 Manage Your Menu 
                        .cards-container
                            each item in data
                                each meal in item.meals
                                    figure.card
                                        .card__emoji 
                                            img(src=`${meal.meal_photo}`)
                                        .card__title-box
                                            h2.card__title=`${meal.meal_name}`
                                        .card__details
                                            //- .card__detail-box
                                            //-     h6.card__detail.card__detail--organic Organic!
                                            //- .card__detail-box
                                            //-     h6.card__detail 4 &#x1F951; per &#x1F4E6;
                                            .card__detail-box
                                                h6.card__detail.meal-price= `â‚¹${meal.price}`
                                        .card__details
                                            button.btn.btn--green.span-all-rows#deleteMeal(data-food-id=`${meal._id},${item._id},${restId}`) Delete!














