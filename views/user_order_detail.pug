extends base
block content
    main.main
        .cart
            .cart_items
                .card(style="border-radius: 30px;height: 78vh")
                    .card-header.py-3
                        h5.mb-0(style = "font-size: 20px; text-align: center; font-weight: bold;background-image: linear-gradient(to right, #ff4800, #960099fc);-webkit-background-clip: text; color: transparent;text-transform: uppercase;font-weight: 700;") Cart items
                    .card-body(style="padding: 20px;height: 72.7vh;overflow-y: scroll;")
                        // Single item
                        each item in data
                            .item
                                .item_picture
                                    // Image
                                    .bg-image.hover-overlay.hover-zoom.ripple.rounded(data-mdb-ripple-color='light')
                                        img(style = "border-radius: 15px;height: 150px;width: 150px;object-fit: cover;")(src=`${item.meal_photo}`, alt='')
                                        a(href='#!')
                                            .mask(style='background-color: rgba(251, 251, 251, 0.2)')
                                    // Image
                                .item_details
                                    // Data
                                    p
                                        strong(style="font-size: 25px;")= `${item.name}`
                                    //- p Size: M

                                    // Data
                                .item_quantity
                                    // Quantity
                                    .d-flex(style='max-width: 300px;font-size: 12px;')

                                        .form-outline
                                            input#form1.form-control(min='0', name='quantity', value=item.quantity, type='number' style="text-align: center;")
                                            label.form-label(for='form1') Quantity

                                    // Quantity
                                    // Price
                                    p.text-start.text-md-center
                                        strong= ` Price : ${item.price}*${item.quantity}`


                            hr.my-4

            .cart_total
                .card(style="border-radius: 30px;text-align: center;margin-bottom: 20px;box-shadow: 10px 10px 25px rgb(0 0 0 / 40%);border-radius: 30px;")
                    .card-header.py-3
                        h5.mb-0(style = "font-size: 20px; text-align: center; font-weight: bold;background-image: linear-gradient(to right, #ff4800, #960099fc);-webkit-background-clip: text; color: transparent;text-transform: uppercase;font-weight: 700;") Summary
                    .card-body
                        ul.list-group.list-group-flush(style="font-size: 13px;")
                            li.list-group-item.d-flex.justify-content-between.align-items-center.border-0.px-0.pb-0
                                | Products
                                span= `₹ ${finalPrice}`
                            li.list-group-item.d-flex.justify-content-between.align-items-center.px-0
                                | Taxes(CGST & IGST)
                                span= `₹ ${tax}`
                            li.list-group-item.d-flex.justify-content-between.align-items-center.border-0.px-0.mb-3
                                div
                                    strong Total amount
                                    strong
                                        p.mb-0 (including taxes)
                                span
                                    strong= `₹ ${pfprice}`